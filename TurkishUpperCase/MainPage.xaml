<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TurkishUpperCase.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                x:Name="Label1"
                Text="Label1" />

            <Label
                x:Name="Label2"
                Text="Label2" />

            <Label
                x:Name="Label3"
                Text="Label2" />

            <Label
                x:Name="Label4"
                Text="Label4" />

            <Button
                x:Name="TranslateBtn"
                HorizontalOptions="Fill"
                Text="Translate"
                Clicked="OnTranslateClicked"
                SemanticProperties.Hint="Translate" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
